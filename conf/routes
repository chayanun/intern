# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.HomeController.index
GET     /about-us                           controllers.HomeController.about
GET     /contact-us                         controllers.HomeController.contactPage
POST    /contact-us                         controllers.HomeController.contactResult
GET     /admin/contact-list                 controllers.AdminController.contactList
POST    /admin/delete                       controllers.AdminController.delete
GET     /admin/service                      controllers.AdminController.serviceList
POST    /admin/update-service               controllers.AdminController.updateService
POST    /admin/delete-service               controllers.AdminController.deleteService
GET     /login                              controllers.AdminController.login
GET     /logout                             controllers.AdminController.logout
POST    /authenticate                       controllers.AdminController.authenticate
GET     /admin/dashboard                    controllers.AdminController.dashboard


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
